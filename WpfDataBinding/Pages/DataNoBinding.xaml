<Page x:Class="WpfDataBinding.Pages.DataNoBinding"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfDataBinding.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DataNoBinding">

    <StackPanel Margin="50" HorizontalAlignment="Center">
        <Label HorizontalContentAlignment="Center" FontSize="16">Object-Data without Binding</Label>
        <StackPanel Orientation="Horizontal">
            <Label Width="100">Name</Label>
            <TextBox Width ="200" x:Name="name_txtB"></TextBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Label Width="100">Firstname</Label>
            <TextBox Width ="200" x:Name="firstname_txtB"></TextBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Label Width="100">DateOfBirth</Label>
            <TextBox Width ="200" x:Name="dateOfBirth_txtB"></TextBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Label Width="100">Sex</Label>
            <TextBox Width ="200" x:Name="sexCd_txtB"></TextBox>
        </StackPanel>
        <Button Click="showData_btnClick" Margin="30">show current Object Data</Button>
    </StackPanel>
</Page>
